/*utility classes*/
.h2_secondry{font-size:24px;font-family:oswald;color:black;font-weight:400;}
.h2_primary{padding:150px 0px 0px 40px; font-size:96px; font-family:oswald; color:#aa6821;width:45%; line-height:95px;}
.center{text-align:center;}
.h2_tertiary{font-size:48px;font-family:oswald;color:black;font-weight:800;}
.common_p{font-size:16px; color:#808080; font-family:'open sans';font-weight:200;font-style:italic;}
.box_p{font-size:16px; color:#808080; font-family:'open sans';font-weight:200;font-style:italic;}
button {border:0;background:none;width:100%;}
button a{background:transparent;border:1px solid  ; border-radius:15px;padding:10px 40px;font-family:oswald;font-size:16px;text-decoration:none;color:#aa6821;}
.left_btn{float:left;margin:43px;}
button a:hover{background-color:#aa6821;color:white;}
.center_btn{float:none;}
.border_solid{border:1px solid #aa6821;padding:30px;}


/*navbar*/

*{margin:0px;padding:0;}
#navbar{display:flex; align-items:center;}
#logo a{color:black;font-size:24px;font-family:roboto;padding:50px 0px 0px 42px;text-decoration:none;font-weight:800}
#logo a:hover{color:#aa6821;}
#navbar ul{display:flex;}
#navbar ul li{list-style-type:none; margin:20px;}
#navbar ul li a{padding:5px 30px;font-family:'roboto'; font-size:16px;text-decoration:none;color:black;font-weight:400;}
#navbar ul li a:hover{background-color:#aa6821;border-radius:5px;color:white;}
#navbar:before{content:" "; position:absolute; background-color:#f2f2f2; height:100px; width:100%; z-index:-1;}

/*banner*/

#banner{display:flex;flex-direction:column; }
#banner:before{content:" "; z-index:-1; position:absolute; height:738px; width:100%; background:url('../images/banner_img.jpg') no-repeat  center/cover;}
#banner p{font-size:16px; color:#808080;font-family:open sans;font-weight:200; font-style:italic; width:45%; padding:45px;line-height:21px;letter-spacing:0px;}

/*section service*/


#service{display:flex;}
#service .box{margin:37px;padding:37px;background-color:#ffffff;width:33%; }
.service_container {background:#d3dadf; float:left;width:100%;}
#service .box:hover{box-shadow:0 0 16px rgb(140 145 150);}


/*recipe*/
#recipe{} 
.recipe_container{float:left;width:100%;padding-top:70px;}
#recipe .box{width:32%;float:left;margin:8px;}
.recipe_container p{margin:10px 300px;}

#recipe .box img{width:100%;}
#recipe .box img:hover{box-shadow:0 0 16px rgb(140 145 150);}

/*new ideas*/
.new_ideas_container{background-color:#d3dadf; float:left;width:100%;padding-top:70px;margin-top:100px;padding-bottom: 70px;}
.margin_p{margin:10px 200px;}
#new_ideas{display:flex;padding-bottom: 30px;}
#new_ideas .box{padding:40px;}


/*health snack*/
.h_snack_container{float:left;width:100%;padding-top:70px;}
#h_snack{display:flex;padding-bottom:30px;}
#h_snack .box{margin:35px;width:24%;}
.border_solid p {padding-top:20px;}

/*bottom section*/
#bottom_sec{display:flex;padding-bottom:30px;}
.bottom_sec_container{float:left;width:100%;padding-top:70px;}
.h_bottom {background-color:#d3dadf;margin:25px;padding:60px;}
.m_l_0{margin-left:0;}

/* footer section starts here */ 
#foot_sec p{background-color:#333333;padding:40px;color:white;text-align:center;font-family:open sans;font-size:16px;}
#foot_sec p a{color:white;}
.footer_sec{width:100%;float:left;position:relative;}
.top{position:absolute;right:5px;bottom:31px;background-color:red;color:white;border-radius:10px;padding:9px 20px;font-family:20px; text-decoration:none;}


